<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <dependencySets>
    <!-- Overlord Commons components -->
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>org.overlord:overlord-commons-*:war</include>
        <include>org.overlord:overlord-commons-*:jar</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${overlord-commons.version}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- The S-RAMP CLI -->
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>org.overlord.sramp:s-ramp-distro-shell:jar:onejar</include>
      </includes>
      <outputFileNameMapping>s-ramp-shell-${artifact.version}.jar</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- All of the DTGov WARs -->
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>org.overlord.dtgov:*:war</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${project.version}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- The dtgov-workflows KIE archive -->
    <dependencySet>
      <outputDirectory>dtgov-data</outputDirectory>
      <includes>
        <include>org.overlord.dtgov:dtgov-workflows:jar</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${project.version}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- The source archives for all DTGov modules -->
    <dependencySet>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>org.overlord.dtgov:dtgov-*:jar:sources</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- The DTGov documentation -->
    <dependencySet>
      <outputDirectory>docs</outputDirectory>
      <includes>
        <include>org.overlord.dtgov:dtgov-wiki:jdocbook</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- The DTGov Installer -->
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>org.overlord.dtgov:dtgov-installer:jar</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${project.version}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>

    <!-- The DTGov Demos -->
    <dependencySet>
      <outputDirectory>demos</outputDirectory>
      <includes>
        <include>org.overlord.dtgov.demos:dtgov-demos-assembly:zip</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    
    <!-- tomcat/lib -->
    <dependencySet>
      <outputDirectory>tomcatlib</outputDirectory>
      <includes>
        <include>org.codehaus.btm:btm:jar</include>
        <include>org.codehaus.btm:btm-tomcat55-lifecycle:jar</include>
        <include>com.h2database:h2:jar</include>
        <include>javax.transaction:jta:jar</include>
        <include>org.slf4j:slf4j-api:jar</include>
        <include>org.slf4j:slf4j-jdk14:jar</include>
        <include>javax.mail:mail:jar</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <!-- Files at the root of the distribution -->
    <fileSet>
      <directory>src/main/resources/ROOT</directory>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
</assembly>
